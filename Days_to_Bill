SELECT ROUND(AVG(DATE(O.CHANGED) - DATE(T.ACTUAL_DELIVERY)), 0) AS DAYS_TO_BILL
FROM TLORDER T, ODRSTAT O
WHERE O.ORDER_ID = T.DETAIL_LiNE_ID
AND T.CURRENT_STATUS = 'BILLD'
AND O.STATUS_CODE = 'BILLD'
AND T.ACTUAL_DELIVERY >= CURRENT TIMESTAMP - 21 DAYS
AND T.ACTUAL_DELIVERY <= CURRENT TIMESTAMP
AND T.EXTRA_STOPS <> 'Child'
