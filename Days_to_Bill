SELECT ROUND(AVG(DATE(T.DELIVER_BY) - DATE(O.CHANGED)), 0) AS DAYS_TO_BILL
FROM TLORDER T, ODRSTAT O
WHERE O.ORDER_ID = T.DETAIL_LiNE_ID
AND T.CURRENT_STATUS = 'BILLD'
AND O.STATUS_CODE = 'BILLD'
AND T.DELIVER_BY >= CURRENT TIMESTAMP - 21 DAYS
AND T.DELIVER_BY <= CURRENT TIMESTAMP
AND T.EXTRA_STOPS <> 'Child'
