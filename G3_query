SELECT 
ls.LS_LEG_ID, ls.LS_TRIP_NUMBER,
t.TRIP_NUMBER, t.STATUS, t.ORIGIN_ZONE, t.DESTINATION_ZONE, t.COMMODITY, 
tlo.DETAIL_LINE_ID, tlo.BILL_NUMBER, tlo.BILL_TO_CODE, tlo.COMMODITY
FROM LEGSUM AS ls INNER JOIN TRIP AS t ON ls.LS.TRIP_NUMBER = t.TRIP_NUMBER
LEFT JOIN TLORDER AS tlo ON tlo.COMMODITY = t.COMMODITY 
WHERE tlo.BILL_TO_CODE = 'G3ENCAMODA'
